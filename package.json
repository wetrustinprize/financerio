{
  "name": "financerio",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "react-router build",
    "build:server": "tsup",
    "migrate:new": "node-pg-migrate create --tsconfig ./tsconfig.json --migrations-dir ./server/migrations",
    "migrate:up": "node-pg-migrate up --tsconfig ./tsconfig.json --migrations-dir ./server/migrations",
    "migrate:down": "node-pg-migrate down --tsconfig ./tsconfig.json --migrations-dir ./server/migrations",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.2",
    "@react-router/node": "^7.5.3",
    "@react-router/serve": "^7.5.3",
    "@rocicorp/zero": "^0.20.2025052100",
    "hono": "^4.7.10",
    "isbot": "^5.1.27",
    "node-pg-migrate": "^8.0.0",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.3",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "tailwindcss": "^4.1.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}